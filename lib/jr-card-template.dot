<div class="jr-card-theme-default">
  <div class="jr-card">

    <div class="jr-header">
      <div class="jr-cover">
        <div class="jr-profile-picture-container">
          <img src="{{=it.profile_image}}"/>
        </div>

        <h2 class="jr-display-name">{{=it.display_name}}</h2>
      </div>

      <div class="jr-experience-info">
        <p>{{=it.designation}}</p>
        <p>
          <small>
            <i class="fa fa-location-arrow"></i>
            {{=it.location}}
          </small>
        </p>
        <p>
          <small>
            <i class="fa fa-envelope"></i>
            {{=it.email}}
          </small>
        </p>
      </div>
    </div>

    <div class="jr-content">
      <div class="jr-stats">
        {{? it.stats.total_experience > 0}}
          <div class="jr-stat">
            <span>
              <span class="jr-numbers">
                {{=it.stats.total_experience}}+ years
              </span>
              <br/>
              <small>
                <i class="fa fa-building"></i>Experience
              </small>
            </span>
          </div>
        {{?}}

        {{? it.stats.total_awards > 0}}
          <div class="jr-stat">
            <span>
              <span class="jr-numbers">{{=it.stats.total_awards}}</span>
              <br/>
              <small>
                <i class="fa fa-trophy"></i>Awards
              </small>
            </span>
          </div>
        {{?}}

        {{? it.stats.total_publications > 0}}
          <div class="jr-stat">
            <span>
              <span class="jr-numbers">{{=it.stats.total_publications}}</span>
              <br/>
              <small>
                <i class="fa fa-book"></i>Publications
              </small>
            </span>
          </div>
        {{?}}

        {{? it.stats.total_skills > 0}}
          <div class="jr-stat">
            <span>
              <span class="jr-numbers">{{=it.stats.total_skills}}</span>
              <br/>
              <small>
                <i class="fa fa-code"></i>Skills
              </small>
            </span>
          </div>
        {{?}}

        {{? it.stats.total_references > 0}}
          <div class="jr-stat">
            <span>
              <span class="jr-numbers">{{=it.stats.total_references}}</span>
              <br/>
              <small>
                <i class="fa fa-thumbs-up"></i>References
              </small>
            </span>
          </div>
        {{?}}
      </div>

      <div class="jr-about">{{=it.about}}</div>
    </div>

    <div class="jr-footer">
      <div class="jr-social-links">
        <div class="jr-social-link"><a href="#"><i class="fa fa-linkedin"></i></a></div>
        <div class="jr-social-link"><a href="#"><i class="fa fa-github"></i></a></div>
        <div class="jr-social-link"><a href="#"><i class="fa fa-stack-overflow"></i></a></div>
        <div class="jr-social-link"><a href="#"><i class="fa fa-codepen"></i></a></div>
        <div class="jr-social-link"><a href="#"><i class="fa fa-twitter"></i></a></div>
        <div class="jr-social-link"><a href="#"><i class="fa fa-facebook"></i></a></div>
        <div class="jr-social-link"><a href="#"><i class="fa fa-dribbble"></i></a></div>
        <div class="jr-social-link"><a href="#"><i class="fa fa-angellist"></i></a></div>
      </div>
    </div>
  </div>
</div>